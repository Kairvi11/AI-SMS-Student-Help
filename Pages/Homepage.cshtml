@page
@model AI_SMS_Student_Help.Pages.HomepageModel
@{
    ViewData["Title"] = "Homepage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Courses</h1>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Semester</th>
                        <th>Taught By</th>
                        <th>Type</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model.Courses)
                    {
                        <tr>
                            <td>@course.CourseId</td>
                            <td>@course.CourseName</td>
                            <td>@course.Semester</td>
                            <td>@course.TaughtBy</td>
                            <td>@course.Type</td>
                            <td>@course.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <!-- Add any custom scripts here -->
}